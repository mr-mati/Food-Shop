<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/item_imgMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/primary_bold"
        android:text="Fusha Asian"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/item_imgMain"
        app:layout_constraintTop_toTopOf="@+id/item_imgMain" />

    <TextView
        android:id="@+id/item_txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Asia, Sushi"
        app:layout_constraintStart_toEndOf="@+id/item_imgMain"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_subject" />

    <TextView
        android:id="@+id/item_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="$12 vip"
        app:layout_constraintStart_toEndOf="@+id/item_imgMain"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_city" />

    <TextView
        android:id="@+id/item_txt_distans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="1.2 miles from you"
        app:layout_constraintStart_toEndOf="@+id/item_imgMain"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_price" />

    <RatingBar
        android:id="@+id/item_rating_Main"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:rating="3"
        android:progressTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="(90 Ratings)"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/item_rating_Main"
        app:layout_constraintStart_toStartOf="@+id/item_rating_Main"
        app:layout_constraintTop_toBottomOf="@+id/item_rating_Main" />
</androidx.constraintlayout.widget.ConstraintLayout>